<Page x:Class="PRIExplorer.Views.PathNotFoundPreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRIExplorer.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PathNotFoundPreviewPage">
    <StackPanel Margin="8">
        <TextBlock Text="{Binding Message}" Margin="0,0,0,8" />
        <Button x:Name="setResourceRootPathButton" Command="{Binding SetResourceRootPathCommand}" Content="Set resource root path..." HorizontalAlignment="Left" />
    </StackPanel>
</Page>
